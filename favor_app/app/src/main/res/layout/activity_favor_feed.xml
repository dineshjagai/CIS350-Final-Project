<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <Spinner
        android:id="@+id/favor_feed_spinner"
        android:layout_width="410dp"
        android:layout_height="48dp"
        app:layout_constraintBottom_toTopOf="@+id/favor_feed_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/favor_feed_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="onButtonClick"
        android:text="Submit query!"
        app:layout_constraintBottom_toTopOf="@+id/map_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/favor_feed_spinner" />

    <Button
        android:id="@+id/map_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:onClick="mapClick"
        android:text="See map"
        app:layout_constraintBottom_toTopOf="@+id/favor_feed_user_list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/favor_feed_button" />


    <ListView
        android:id="@+id/favor_feed_user_list"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:dividerHeight="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/favor_feed_button"
        app:layout_constraintTop_toBottomOf="@+id/favor_feed_button">

    </ListView>



</androidx.constraintlayout.widget.ConstraintLayout>

