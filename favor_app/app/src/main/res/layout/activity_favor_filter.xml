<?xml version = "1.0" encoding = "utf-8"?>
<LinearLayout
    xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:tools = "http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height = "match_parent"
    android:orientation="vertical"
    android:paddingLeft= "@dimen/activity_horizontal_margin"
    android:paddingRight = "@dimen/activity_horizontal_margin"
    android:paddingTop = "@dimen/activity_vertical_margin"
    android:paddingBottom = "@dimen/activity_vertical_margin"
    android:background = "@drawable/background_favors_filter" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:weightSum="2.0">

        <TextView
        android:id="@+id/text_header_favor_filter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:text="Favor Categories"
        android:textColor="#3AB75D"
        android:textSize="35dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">
            <EditText
                android:id="@+id/find_favor_search_et"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:hint="Find Favor by details"
                android:inputType="textAutoCorrect"
                android:textColorHighlight="#ff7eff15"
                android:textColorHint="#3AB75D"
                android:textSize="15dp" />


        <Button
            android:id="@+id/find_favor_search_btn"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:layout_marginLeft="20dp"
            android:text="Search detail" />
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="1dp"
        android:weightSum="3.0">

        <Button
            android:id="@+id/home_and_cleaning_favor_btn"
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:layout_marginLeft="25dp"
            android:layout_weight="1"
            android:alpha="0.7"
            android:background="@drawable/home_cleaning"
            android:contentDescription="@string/app_name"
            android:text="Home and Cleaning Favors"
            android:textAllCaps="false" />


        <Button
            android:id="@+id/drinks_btn"
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:layout_marginLeft="25dp"
            android:layout_weight="1"
            android:alpha="0.7"
            android:background="@drawable/home_cleaning"
            android:contentDescription="@string/app_name"
            android:text="Drink \n Favors"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/booze_btn"
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:layout_marginLeft="25dp"
            android:layout_weight="1"
            android:alpha="0.7"
            android:background="@drawable/home_cleaning"
            android:contentDescription="@string/app_name"
            android:text="Booze Runs Favors"
            android:textAllCaps="false" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="3.0">

        <Button
            android:id="@+id/grocery_btn"
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:layout_marginLeft="25dp"
            android:layout_weight="1"
            android:alpha="0.7"
            android:background="@drawable/home_cleaning"
            android:contentDescription="@string/app_name"
            android:text="Grocery Delivery Favors"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/food_btn"
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:layout_marginLeft="25dp"
            android:layout_weight="1"
            android:alpha="0.7"
            android:background="@drawable/home_cleaning"
            android:contentDescription="@string/app_name"
            android:text="Food \n Delivery Favors"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/pharmacy_btn"
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:layout_marginLeft="25dp"
            android:layout_weight="1"
            android:alpha="0.7"
            android:background="@drawable/home_cleaning"
            android:contentDescription="@string/app_name"
            android:text="Pharmacy Delivery Favors"
            android:textAllCaps="false" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="3.0">

        <Button
            android:id="@+id/pet_btn"
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:layout_marginLeft="25dp"
            android:layout_weight="1"
            android:alpha="0.7"
            android:background="@drawable/home_cleaning"
            android:contentDescription="@string/app_name"
            android:text="Pet \n Favors"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/stationary_items_btn"
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:layout_marginLeft="25dp"
            android:layout_weight="1"
            android:alpha="0.7"
            android:background="@drawable/home_cleaning"
            android:contentDescription="@string/app_name"
            android:text="Stationary and Electronic  Favors"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/snacks_btn"
            android:layout_width="0dp"
            android:layout_height="130dp"
            android:layout_marginLeft="25dp"
            android:layout_weight="1"
            android:alpha="0.7"
            android:background="@drawable/home_cleaning"
            android:contentDescription="@string/app_name"
            android:text="Quick Snacks and Meals Favors"
            android:textAllCaps="false" />

    </LinearLayout>


</LinearLayout>